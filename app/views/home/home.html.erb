<div class="main container">
  <div id="champion-level" class="bar-chart row">
    <div class='col-xs-offset-4'>
      <h1>Champions at Each Level</h1>
      <%= bar_chart @data_level, @options %>
    </div>
  </div>

  <div>

    <select id="ChampionSort">
      <option value="Alpha">Alphabetically</option>
      <option value="Most">Most XP</option>
      <option value="Level">Next Level</option>
    </select>

    <select id="chestFilter">
      <option value="All">All</option>
      <option value="Chest">Mastery Chest</option>
      <option value="NoChest">No Chest</option>
    </select>

    <% build_grid_view.each do |row| %>
      <div class="row championRow">
        <% row.each do |champ| %>
          <div class="col-xs-2">
            <img class="img-responsive" src=<%=(champ.fetch(:img))%>>
          </div>
        <%end%>
      </div>
    <%end%>
  </div>
  </div>
</div>
