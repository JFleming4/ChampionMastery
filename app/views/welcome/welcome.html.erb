<%
options = %w(na br eune euw jp kr lan las oce pbe ru tr)
%>
<div class='form-parent container'>
  <%= form_for :person do |f| %>
    <div class='form-component region-select row'>
      <p class='col-xs-2 col-xs-offset-4'>Select Region: <p><%= f.select :region, options.map { |v| [v.upcase, v] },class:'col-xs-2' %><br />
    </div>
    <div class='form-component summoner-name row'>
      <p class='col-xs-2 col-xs-offset-4'>Summoner Name:<p> <%= f.text_field :sumName, class:'col-xs-2' %><br />
    </div>
    <div class='form-component submit row'>
      <%= f.submit "Get Stats", class:'btn-large submit col-xs-4 col-xs-offset-4'%>
    </div>
    <% end %>
</div>
